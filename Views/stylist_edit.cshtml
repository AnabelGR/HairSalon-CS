@{
  Layout="Shared/_Layout.cshtml";
}

<h2>Edit stylist: @Model.GetName()</h2>
<form class="form-horizontal" id="stylist" action="/stylist/edit/Model.GetId()" method="post">
  <div class="form-group">
    <label class="col-md-4" for="Name">Stylist Name:</label>
    <div class="col-md-8">
    <input class="form-control" name="name" type="text">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4" for="location">Salon Location:</label>
    <div class="col-md-8">
    <input class="form-control" name="location" type="text">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4" for="specialtyId">Specialty:</label>
    <div class="col-md-4">
      <select class="form-control" name="specialty-id">
        @foreach (var specialty in Model)
        {
          <option value="@specialty.GetId()">@specialty.GetName()</option>
        }
      </select>
    </div>
  </div>
  <button class="btn" type="submit">Submit</button>
</div>
</form>
