@{
  Layout="Shared/_Layout.cshtml";
}

<div class="introduction">
  <h2>All of our stylists are skilled in a variety of services.</h2>
  <p>AmyRose Salons hires and trains osme of the most skilled stylists in the city. We're conviently located in every nueghborhood. Book your appointment today. Walk-ins are always welcome!</p>
</div>
@{
  Layout="Shared/_Layout.cshtml";
}
<div class="panel-group" id="accordion">
  <div class="panel panel-default">
  @foreach (var stylist in @Model["stylists"])
  {
    @if (@stylist.GetId() == 1)
    {
      <div class="panel-heading" style="background-color:#41738E !important">
        <h4 class="panel-title">
          <p id="@stylist.GetId()"class="stylist">@stylist.GetType()</p>
        </h4>
      </div>
    }
    else if (@stylist.GetId() == 2)
    {
      <div class="panel-heading" style="background-color:#449E6E !important">
        <h4 class="panel-title">
          <p id="@stylist.GetId()"class="stylist">@stylist.GetType()</p>
        </h4>
      </div>
    }
    else if (@stylist.GetId() == 3)
    {
      <div class="panel-heading" style="background-color:#41738E !important">
        <h4 class="panel-title">
          <p id="@stylist.GetId()"class="stylist">@stylist.GetType()</p>
        </h4>
      </div>
    }
    else if (@stylist.GetId() == 4)
    {
      <div class="panel-heading" style="background-color:#449E6E !important">
        <h4 class="panel-title">
          <p id="@stylist.GetId()"class="stylist">@stylist.GetType()</p>
        </h4>
      </div>
    }


  @foreach (var client in @Model["clients"])
  {
    if(client.GetStylistId() == stylist.GetId())
    {
      if(client.GetStylistId() == 1)
      {
        <div class="panel-body client-@stylist.GetId()" style="background-color:#9BBCCE !important; border-bottom: 1px solid black">
          <a href="client/@client.GetId()">@client.GetName()</a>
        </div>
      }
      else if (client.GetStylistId() == 2)
      {
        <div class="panel-body client-@stylist.GetId()" style="background-color:#A0D7BA !important; border-bottom: 1px solid black">
          <a href="client/@client.GetId()">@client.GetName()</a>
        </div>
      }
      else if (client.GetStylistId() == 3)
      {
        <div class="panel-body client-@stylist.GetId()" style="background-color:#9BBCCE !important; border-bottom: 1px solid black">
          <a href="client/@client.GetId()">@client.GetName()</a>
        </div>
      }
      else if (client.GetStylistId() == 4)
      {
        <div class="panel-body client-@stylist.GetId()" style="background-color:#A0D7BA !important; border-bottom: 1px solid black">
          <a href="client/@client.GetId()">@client.GetName()</a>
        </div>
      }


    }
  }
  }

  </div>
  <div class="panel-footer">
    <p>Don't see your client? <a href="#anchor" class="showForm">Submit yours.</a></p></div>
</div>
<a name="anchor"><div class="hideThis"></a>
  <form action="/client/new" method="post">
  <label for="user-name"></label>
  <input id="user-name" name="user-name" type="text" placeholder="Owner Login">
  <label for="user-password"></label>
  <input id="user-password" name="user-password" type="text" placeholder="Password">
  <button type="submit">Submit</button>
</form>
</div>
