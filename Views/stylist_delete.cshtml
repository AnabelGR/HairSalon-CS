@{
  Layout="Shared/_Layout.cshtml";
}

<h2>Are you sure you want to delete this stylist and all of their attached clients?</h2>
<h3>@Model.GetName()</h3>
<form action="/stylist/delete/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <p><button type="submit" class="btn">Delete</button></p>
</form>
