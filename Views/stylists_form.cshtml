@{
  Layout="Shared/_Layout.cshtml";
}

<h2>Add stylist:</h2>
<form class="form-horizontal" id="stylist" action="/stylist/new" method="post">
  <div class="form-group">
    <label class="col-md-3" for="Name">Stylist Name:</label>
    <div class="col-md-3">
    <input class="form-control" name="name" type="text">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-3" for="location">Salon Location:</label>
    <div class="col-md-3">
    <input class="form-control" name="location" type="text">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-3" for="specialty-id">Specialty:</label>
    <div class="col-md-3">
      <select class="form-control" name="specialty-id">
        @foreach (var specialty in Model)
        {
          <option value="@specialty.GetId()">@specialty.GetName()</option>
        }
      </select>
    </div>
  </div>
  <button class="btn" type="submit">Add</button>
</form>
<p><a href="/" class="btn">Home</a></p>
