@{
  Layout="Shared/_Layout.cshtml";
}

<h2>Add stylist:</h2>
<form class="form-horizontal" id="stylist" action="/stylist/new" method="post">
  <div class="form-group">
    <label class="col-md-4" for="Name">Stylist Name:</label>
    <div class="col-md-8">
    <input class="form-control" name="name" type="text">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4" for="location">Salon Location:</label>
    <div class="col-md-8">
    <input class="form-control" name="location" type="text">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4" for="specialty_id">Specialty:</label>
    <div class="col-md-4">
      <select class="form-control" name="specialty_id">
        @foreach (var specialtyId in Model)
        {
          <option value="@SpecialtyId.GetId()">@SpecialtyId.GetName()</option>
        }
      </select>
    </div>
  </div>
  <button class="btn" type="submit">Add</button>
</div>
</form>
